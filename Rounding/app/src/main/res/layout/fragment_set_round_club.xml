<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetRoundDateFragment">

    <SearchView
        android:id="@+id/setRoundClub_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="클럽을 검색해 주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/setRoundClub_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/setRoundClub_searchView"
        tools:layout_editor_absoluteX="411dp"
        tools:listitem="@layout/club_list_item">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/setClubDone_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/setRoundCourse_recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/course_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>